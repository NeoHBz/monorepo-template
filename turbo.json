{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["VITE_API_URL", "NODE_ENV", "PORT", "DATABASE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "compile": {
      "dependsOn": ["^compile"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
