{
  "extends": "@manifest/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@apps/*": ["apps/*"],
      "@packages/*": ["packages/*"],
      "@manifest/prisma": ["packages/prisma/index.ts"],
      "@manifest/api-contracts": ["packages/api-contracts/src/index.ts"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "src",
    "../../packages/api-contracts/src/**/*",
    "../../apps/backend/src/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
